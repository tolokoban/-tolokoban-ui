{
    "compilerOptions": {
        "alwaysStrict": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src/",
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "diagnostics": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "extendedDiagnostics": false,
        "incremental": false,
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "es6"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "outDir": "./dist/",
        "paths": {
            "@/*": ["*"],
            "*": ["src/*", "node_modules/*"]
        },
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": true,
        "target": "es5",
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "exclude": [
        "dist",
        "node_modules",
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx",
        "doc"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./src/**/*.css",
        "./src/**/*.svg",
        "./src/**/*.png",
        "./src/**/*.jpg",
        "./src/**/*.jpeg",
        "./src/**/*.gif"
    ],
    "paths": {
        "@/*": ["*"],
        "*": ["src/*", "node_modules/*"]
    },
    "files": ["src/index.tsx"]
}
