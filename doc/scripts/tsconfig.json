{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "diagnostics": false,
        "declaration": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "target": "ES6",
        "outDir": "./dist"
    },
    "exclude": [
        "dist",
        "node_modules",
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx",
        "doc"
    ],
    "include": ["./src/**/*.ts"],
    "files": ["src/prebuild.ts"]
}
