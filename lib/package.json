{
    "name": "@tolokoban/ui",
    "version": "0.15.0",
    "private": false,
    "main": "dist/index.js",
    "type": "module",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "sideEffects": [
        "*.css"
    ],
    "scripts": {
        "generate": "node scripts/prebuild/prebuild.mjs",
        "prepack": "npm run build",
        "prebuild": "rm -rf dist/* && npm run generate",
        "doc": "typedoc --watch",
        "build": "node scripts/builder/build.mjs",
        "lint": "eslint -c .eslintrc.yml 'src/**/*.ts'",
        "start": "node scripts/builder/build.mjs --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "prepub": "npm run build",
        "pub": "npm publish --access public",
        "prestart": "npm run generate"
    },
    "devDependencies": {
        "@babel/core": "^7.24.0",
        "@types/node": "^20.11.25",
        "@types/react": "^18.2.64",
        "acorn": "^8.11.3",
        "autoprefixer": "^10.4.18",
        "babel-loader": "^9.1.3",
        "chalk": "^5.3.0",
        "chokidar": "^3.6.0",
        "circular-dependency-plugin": "^5.2.2",
        "css-loader": "^6.10.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-flowtype": "^8.0.3",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsdoc": "^48.2.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-react": "^7.34.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unicorn": "^51.0.1",
        "json5": "^2.2.3",
        "react": "^18.2.0",
        "style-loader": "^3.3.4",
        "ts-loader": "^9.5.1",
        "ts-patch": "^3.1.2",
        "tslib": "^2.6.2",
        "typescript": "^5.4.2",
        "typescript-plugin-css-modules": "^5.1.0",
        "typescript-transform-paths": "^3.4.7",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4"
    },
    "peerDependencies": {
        "react": "^18.2.0"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "description": "React components with theme",
    "homepage": "https://tolokoban.github.io/ui"
}