        "eslint-plugin-unicorn": "^51.0.1",
        "json5": "^2.2.3",
        "postcss": "^8.4.35",
        "postcss-flexbugs-fixes": "^5.0.2",
        "react": "^18.2.0",
        "react-dom": "18.2.0",
