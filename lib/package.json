{
    "name": "@tolokoban/ui",
    "version": "0.13.0",
    "private": false,
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "files": [
        "dist"
    ],
    "sideEffects": [
        "*.css"
    ],
    "scripts": {
        "generate": "node scripts/prebuild.mjs",
